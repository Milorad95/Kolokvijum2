@model Kolokvijum2.Models.Proizvodjac

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Proizvodjac</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProizvodjacID" />
            <div class="form-group">
                <label asp-for="NazivProizvodjaca" class="control-label"></label>
                <input asp-for="NazivProizvodjaca" class="form-control" />
                <span asp-validation-for="NazivProizvodjaca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"class="btn btn-secondary">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
