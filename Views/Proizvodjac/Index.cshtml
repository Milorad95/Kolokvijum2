@model IEnumerable<Kolokvijum2.Models.Proizvodjac>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj novi</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NazivProizvodjaca)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NazivProizvodjaca)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProizvodjacID" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProizvodjacID" class="btn btn-secondary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProizvodjacID" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
